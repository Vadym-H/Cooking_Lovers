@model IEnumerable<RecipeViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Filter</a>
            <div class="dropdown-menu">
                <h6 class="dropdown-header">Sort by preparation time</h6>
                <div class="btn-group flex-column mx-md-3">
                    <div class="my-1">
                        <input type="checkbox" class="" name="radio-preparationTime-filter" id="btnradio1">
                        <label class="" for="btnradio1">0h - 1h</label>
                    </div>
                    <div class="my-1">
                        <input type="checkbox" class="" name="radio-preparationTime-filter" id="btnradio2">
                        <label class="" for="btnradio2">1h - 2h</label>
                    </div>
                    <div class="my-1">
                        <input type="checkbox" class="" name="radio-preparationTime-filter" id="btnradio3">
                        <label class="" for="btnradio3">2h+</label>
                    </div>
                </div>
                <div class="dropdown-divider"></div>
                <h6 class="dropdown-header">Sort by difficulty</h6>
                <div class="btn-group flex-column mx-md-3">
                    <div class="my-1">
                        <input type="checkbox" class="" name="radio-difficulty-filter" id="btnradio4">
                        <label class="" for="btnradio4">Easy</label>
                    </div>
                    <div class="my-1">
                        <input type="checkbox" class="" name="radio-difficulty-filter" id="btnradio5">
                        <label class="" for="btnradio5">Medium</label>
                    </div>
                    <div class="my-1">
                        <input type="checkbox" class="" name="radio-difficulty-filter" id="btnradio6">
                        <label class="" for="btnradio6">Hard</label>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</div>

<div class="d-flex flex-column align-items-center row-gap-5">
    @foreach(var recipe in Model)
    {
        <div class="card text-white bg-primary mb-3" style="max-width: 30rem; min-width: 30rem">
            <h4 class="card-header text-center">@recipe.Title</h4>
            <div class="card-body">
                <div class="accordion" id="cardAccordion$@recipe.Title$">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="collapseIngredientsHeading$@recipe.Title$">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseIngredients$@recipe.Title$" aria-expanded="false" aria-controls="collapseIngredients$@recipe.Title$">
                                Ingredients
                            </button>
                        </h2>
                        <div class="accordion-collapse collapse" id="collapseIngredients$@recipe.Title$" aria-labelledby="collapseIngredientsHeading$@recipe.Title$" data-bs-parent="#cardAccordion$@recipe.Title$">
                            <div class="accordion-body">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Quantity</th>
                                            <th>Unit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var ingredient in recipe.Ingredients)
                                    {
                                        <tr>
                                            <td>@ingredient.Name</td>
                                            <td>@ingredient.Quantity</td>
                                            <td>@ingredient.Unit</td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-2 mx-2">
                    <p6>Preparation Time:</p6>
                    <p6>@recipe.PreparationTime</p6>
                </div>
            </div>
        </div>
    }
</div>
